<div style="display: block; text-align: center;">
  <img src="{{ section.settings.image | img_url: '100x100'}}" alt="image" >
    <ul>
        {% for link in linklists[section.settings.main_linklist].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
  </ul>
  {% for mix in collections[section.settings.mix_collection].products %}
            <div class="slideshow-container"  onclick="plusSlides(1)">
                <div class="mySlides fade">
                    <div class="numbertext">{{ mix.title | escape }} - {{ mix.price | money }}</div>
                    <img src="{{ mix | img_url: '1200x800' }}" style="width:100%">
                </div>
            </div>

            <div class="slideshow-container"  onclick="plusSlides2(1)">
                <div class="mySlides2 fade">
                    <div class="numbertext">{{ mix.title | escape }} - {{ mix.price | money }}</div>
                    <img src="{{ mix | img_url: '1200x800' }}" style="width:100%">
                </div>
            </div>
        {% endfor %}
</div>
 

<script>
    var slideIndex = 1;
    showSlides(slideIndex);

    // Next/previous controls
    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    // Thumbnail image controls
    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        if (n > slides.length) {slideIndex = 1}
        if (n < 1) {slideIndex = slides.length}
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex-1].style.display = "block";
        dots[slideIndex-1].className += " active";
    }
</script>
